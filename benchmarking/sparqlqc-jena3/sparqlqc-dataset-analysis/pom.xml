    <parent>
        <groupId>org.aksw.sparqlqc</groupId>
        <artifactId>sparqlqc-benchmark</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <dependencies>

        <dependency>
            <groupId>net.sf.jopt-simple</groupId>
